#!/usr/bin/env bash

infile=tests/reads.counts.gz
outfile=tests/reads.counts.sym
if [[ -e "${infile}" ]]; then
    ./dnmtools sym -o ${outfile} ${infile}
    x=$(md5sum -c tests/md5sum.txt | grep ${outfile} | cut -d ' ' -f 2)
    if [[ "${x}" != "OK" ]]; then
        exit 1;
    fi
else
    echo "${infile} not found; skipping remaining tests";
    exit 77;
fi
